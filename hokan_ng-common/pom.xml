            <version>1.8.2</version>
        </dependency>

        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>2.8.1</version>
        </dependency>

        <dependency>
            <groupId>com.freakz.hokan_ng</groupId>
            <artifactId>hokan_ng-arthurdo-custom</artifactId>
